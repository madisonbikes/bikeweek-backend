{
  "name": "bikeweek-backend",
  "version": "1.2.10",
  "description": "Imports events from Gravity Forms form data into Sched",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts | pino-pretty -c",
    "compile": "tsc --noEmit",
    "dist": "tsc && npm run genversion",
    "dev": "ts-node-dev --inspect -- src/index.ts | pino-pretty -c",
    "fmt": "prettier --write .",
    "pm2-start": "npx --yes pm2 startOrRestart ecosystem.config.js --update-env",
    "pm2-stop": "npx --yes pm2 stop ecosystem.config.js",
    "lint": "eslint . --max-warnings=0",
    "check-package-updates": "npm-check-updates",
    "test": "NODE_ENV=test npx jest --maxWorkers=50%",
    "test-watch": "NODE_ENV=test npx jest --maxWorkers=25% --watch",
    "coverage": "NODE_ENV=test npx jest --maxWorkers=50% --coverage=true",
    "prepare": "husky",
    "genversion": "genversion -f -u dist/src/backend-version.js",
    "knip": "knip",
    "check": "npm run compile && npm run lint && npm run knip && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madisonbikes/bikeweek-backend.git"
  },
  "author": "Ben Sandee",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.x"
  },
  "bugs": {
    "url": "https://github.com/madisonbikes/bikeweek-backend/issues"
  },
  "homepage": "https://github.com/madisonbikes/bikeweek-backend#readme",
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.7.0",
    "bcryptjs": "^3.0.2",
    "build-url": "^6.0.1",
    "connect-redis": "^8.0.3",
    "connection-string": "^4.4.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "google-auth-library": "^9.15.1",
    "hono": "^4.7.9",
    "hono-sessions": "^0.7.2",
    "http-status-codes": "^2.3.0",
    "iovalkey": "^0.3.1",
    "mongodb": "^6.16.0",
    "pino": "^9.6.0",
    "set-interval-async": "^3.0.3",
    "superagent": "^10.2.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.46",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "genversion": "^3.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "knip": "^5.55.1",
    "mongodb-memory-server": "^10.1.4",
    "npm-check-updates": "^18.0.1",
    "pino-pretty": "^13.0.0",
    "prettier": "3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
}